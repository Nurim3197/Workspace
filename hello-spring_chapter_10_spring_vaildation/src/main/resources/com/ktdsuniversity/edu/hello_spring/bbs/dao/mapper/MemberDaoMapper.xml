<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.ktdsuniversity.edu.hello_spring.member.dao.MemberDao">

	<insert id="insertNewMember" parameterType="com.ktdsuniversity.edu.hello_spring.member.vo.UserVO">
	INSERT INTO MEMBERS
	(      NAME
	     , EMAIL
	     , PASSWORD)
	VALUES (#{name}
	     , #{email}
	     , #{password})
	</insert>
	
	<select id="selectEmailCount" resultType="int" parameterType="String">
	SELECT COUNT(1)
	  FROM MEMBERS
	 WHERE EMAIL = #{email}
	</select>

</mapper>